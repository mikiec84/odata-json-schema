{
    "$id": "ODataDemo",
    "$schema": "https://oasis-tcs.github.io/odata-json-schema/tools/odata-meta-schema.json#",
    "odata-version": "4.01",
    "anyOf": [
        {
            "description": "Products: single entity",
            "type": "object",
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Products([/(][^\\$]*)?/\\$entity$"
                }
            },
            "allOf": [
                {
                    "$ref": "#/definitions/ODataDemo.Product"
                }
            ]
        },
        {
            "description": "Products: collection of entities",
            "type": "object",
            "required": [
                "value"
            ],
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Products([/(][^\\$]*)?$"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Product"
                    }
                }
            }
        },
        {
            "description": "Categories: single entity",
            "type": "object",
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Categories([/(][^\\$]*)?/\\$entity$"
                }
            },
            "allOf": [
                {
                    "$ref": "#/definitions/ODataDemo.Category"
                }
            ]
        },
        {
            "description": "Categories: collection of entities",
            "type": "object",
            "required": [
                "value"
            ],
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Categories([/(][^\\$]*)?$"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Category"
                    }
                }
            }
        },
        {
            "description": "Suppliers: single entity",
            "type": "object",
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Suppliers([/(][^\\$]*)?/\\$entity$"
                }
            },
            "allOf": [
                {
                    "$ref": "#/definitions/ODataDemo.Supplier"
                }
            ]
        },
        {
            "description": "Suppliers: collection of entities",
            "type": "object",
            "required": [
                "value"
            ],
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Suppliers([/(][^\\$]*)?$"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Supplier"
                    }
                }
            }
        },
        {
            "description": "MainSupplier: singleton",
            "type": "object",
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#MainSupplier([/(].*)?$"
                }
            },
            "allOf": [
                {
                    "$ref": "#/definitions/ODataDemo.Supplier"
                }
            ]
        },
        {
            "description": "Countries: single entity",
            "type": "object",
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Countries([/(][^\\$]*)?/\\$entity$"
                }
            },
            "allOf": [
                {
                    "$ref": "#/definitions/ODataDemo.Country"
                }
            ]
        },
        {
            "description": "Countries: collection of entities",
            "type": "object",
            "required": [
                "value"
            ],
            "properties": {
                "@odata.context": {
                    "type": "string",
                    "pattern": "\\$metadata#Countries([/(][^\\$]*)?$"
                },
                "value": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Country"
                    }
                }
            }
        }
    ],
    "definitions": {
        "ODataDemo.Product": {
            "type": "object",
            "properties": {
                "ID": {
                    "type": "string"
                },
                "Description": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ReleaseDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                },
                "DiscontinuedDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                },
                "Rating": {
                    "type": [
                        "integer",
                        "null"
                    ],
                    "format": "int32"
                },
                "Price": {
                    "type": [
                        "number",
                        "string",
                        "null"
                    ],
                    "format": "decimal"
                },
                "Currency": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 3
                },
                "Category": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/ODataDemo.Category"
                        }
                    ]
                },
                "Supplier": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/ODataDemo.Supplier"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
        "ODataDemo.Category": {
            "type": "object",
            "properties": {
                "ID": {
                    "type": "integer",
                    "format": "int32"
                },
                "Name": {
                    "type": "string"
                },
                "Products": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Product"
                    }
                }
            }
        },
        "ODataDemo.Supplier": {
            "type": "object",
            "properties": {
                "ID": {
                    "type": "string"
                },
                "Name": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "Address": {
                    "$ref": "#/definitions/ODataDemo.Address"
                },
                "Concurrency": {
                    "type": "integer",
                    "format": "int32"
                },
                "Products": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ODataDemo.Product"
                    }
                }
            }
        },
        "ODataDemo.Country": {
            "type": "object",
            "properties": {
                "Code": {
                    "type": "string",
                    "maxLength": 2
                },
                "Name": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "ODataDemo.Address": {
            "type": "object",
            "properties": {
                "Street": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "City": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "State": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ZipCode": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "CountryName": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "Country": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/ODataDemo.Country"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}
